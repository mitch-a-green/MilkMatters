<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.milkmatters.honoursproject.milkmatters.fragments.AboutFragment">

    <RelativeLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_alignParentTop="true"
            android:id="@+id/about_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/about_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/about_heading"
                    android:layout_alignParentTop="true"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/about_text"
                    android:layout_below="@id/about_heading"
                    android:id="@+id/about_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="2sp"
                    android:text="@string/mm_link"
                    android:autoLink="web"
                    android:layout_below="@id/about_text"
                    android:id="@+id/about_mm_link" />


                <Button
                    android:id="@+id/about_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/about_link"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:layout_below="@id/about_mm_link"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_below="@+id/about_cardview"
            android:id="@+id/about_contact_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/about_contact_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/about_contact_heading"
                    android:layout_alignParentTop="true"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/about_contact_heading"
                    android:id="@+id/test">

                    <LinearLayout
                        android:id="@+id/contact_linear_layout"
                        android:layout_below="@+id/about_contact_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/telephone"
                            android:textColor="@color/colorLightPink"/>
                        <TextView
                            android:id="@+id/office_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/office_number"
                            android:textStyle="italic"
                            android:clickable="true"/>
                        <TextView
                            android:id="@+id/cell_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_number"
                            android:textStyle="italic"
                            android:clickable="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textColor="@color/colorLightPink"/>
                        <TextView
                            android:id="@+id/email_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email_address"
                            android:textStyle="italic"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/about_mm_logo"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    android:layout_margin="40dp"
                    android:src="@mipmap/mm_logo"
                    android:layout_alignParentRight="true" />

                <Button
                    android:id="@+id/email_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/email_us"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:layout_below="@id/test"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</ScrollView>
