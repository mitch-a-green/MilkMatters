<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.milkmatters.honoursproject.milkmatters.fragments.DonationTrackingFragment"
    android:id="@+id/grid_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="1"
    android:columnCount="2"
    android:orientation="horizontal"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/ml_card_view"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_marginRight="5sp"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/ml_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/ml_expressed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ml_expressed"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/cup_image"
                android:layout_centerHorizontal="true"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/cup_2"
                android:layout_margin="5dp"
                android:layout_below="@id/ml_expressed_title"/>

            <TextView
                android:id="@+id/ml_expressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10ml"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cup_image"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/babies_card_view"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_marginLeft="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/babies_fed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/babies_fed"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/baby_resized"
                android:layout_centerHorizontal="true"
                android:src="@drawable/purple_baby"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:layout_below="@id/babies_fed_title"/>

            <TextView
                android:id="@+id/babies_fed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 babies"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/baby_resized"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</GridLayout>